{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "outDir": "dist",
        "moduleResolution": "NodeNext",
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"]
    }
}
